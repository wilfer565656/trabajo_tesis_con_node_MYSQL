<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/addtesis" method="POST" >
                        <div class="form-group">
                            <input type="text" name="titulo" class="form-control" placeholder="Titulo de la tesis" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="autor" class="form-control" placeholder="Nombre del autor" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="asesor" class="form-control" placeholder="Nombre del asesor" >
                        </div>
                        <div class="form-group">
                            <input type="file " name="archivo" class="form-control" placeholder="Archivo" >
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>