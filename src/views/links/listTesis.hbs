<div class="container p-4">
    <div class="row">
        {{#each tesis}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{autor}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{titulo}}
                        </h3>
                    </a>
                    <p class="m-2">{{asesor}}</p>
                     <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        eliminar 
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}There are not Links saved yet
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>.</p>
                <a href="/links/adest">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>